<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EpolisPlusApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#FF006AA5</item>
    </style>


    <style name="Theme.EpolisPlusApp.Auth" parent="Theme.EpolisPlusApp">
        <item name="android:statusBarColor">@color/main_back</item>
    </style>

    <style name="ToolbarTitleBold" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CustomSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:track">@drawable/track_size</item>
        <item name="android:thumbTextPadding">16dp</item>
    </style>


    <style name="Theme.EpolisPlusApp" parent="Base.Theme.EpolisPlusApp" />

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>

    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_menu_color_selector</item>
        <item name="itemTextColor">@color/bottom_menu_color_selector</item>
        <item name="background">@color/bottom_nav_background</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:drawable">@drawable/banner_selector</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/custom_checkbox</item>
    </style>

</resources>