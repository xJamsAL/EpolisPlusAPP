<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_back">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edInputConfPassReg"
                android:layout_width="363dp"
                android:layout_height="42dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/auth_input_border"
                android:drawableEnd="@drawable/auth_input_eye"
                android:drawableTint="@color/grey"
                android:elevation="8dp"
                android:ems="10"
                android:hint="@string/edit_input_repeat_pass"
                android:inputType="text|textPassword|textMultiLine"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="@+id/edInputPhoneReg"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edInputPhoneReg"
                app:layout_constraintTop_toBottomOf="@+id/edInputPassReg" />

            <TextView
                android:id="@+id/textView341"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/text_input_repeat_pass"
                android:textColor="@color/grey"
                app:layout_constraintBottom_toTopOf="@+id/edInputConfPassReg"
                app:layout_constraintStart_toStartOf="@+id/edInputConfPassReg" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/text_input_password"
                android:textColor="@color/grey"
                app:layout_constraintBottom_toTopOf="@+id/edInputPassReg"
                app:layout_constraintStart_toStartOf="@+id/edInputPassReg" />

            <EditText
                android:id="@+id/edInputPassReg"
                android:layout_width="363dp"
                android:layout_height="42dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/auth_input_border"
                android:drawableEnd="@drawable/auth_input_eye"
                android:drawableTint="@color/grey"
                android:elevation="8dp"
                android:ems="10"
                android:hint="@string/edtext_input_password"
                android:inputType="text|textPassword"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="@+id/edInputPhoneReg"
                app:layout_constraintStart_toStartOf="@+id/edInputPhoneReg"
                app:layout_constraintTop_toBottomOf="@+id/edInputPhoneReg" />

            <TextView
                android:id="@+id/textView78"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="5dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.45999998" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarReg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToOutline="true"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/auth_toolbar_circle_left_24"
                app:navigationIconTint="@color/green"
                app:title="@string/regis_toolbar_back"
                app:titleTextColor="@color/green" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:padding="10dp"
                android:paddingStart="15dp"
                android:text="@string/regis_title"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbarReg" />


            <EditText
                android:id="@+id/edInputNameReg"
                android:layout_width="363dp"
                android:layout_height="42dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/auth_input_border"
                android:elevation="8dp"
                android:ems="10"
                android:hint="@string/edit_input_name"
                android:inputType="text|textImeMultiLine"
                android:paddingStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/text_input_name"
                android:textColor="@color/grey"
                app:layout_constraintBottom_toTopOf="@+id/edInputNameReg"
                app:layout_constraintStart_toStartOf="@+id/edInputNameReg" />

            <EditText
                android:id="@+id/edInputPhoneReg"
                android:layout_width="363dp"
                android:layout_height="42dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/auth_input_border"
                android:elevation="8dp"
                android:ems="10"
                android:hint="@string/edtext_input_phone_number"
                android:inputType="phone"
                android:paddingLeft="10dp"
                app:layout_constraintEnd_toEndOf="@+id/edInputNameReg"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/edInputNameReg"
                app:layout_constraintTop_toBottomOf="@+id/edInputNameReg" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/text_input_phone_number"
                android:textColor="@color/grey"
                app:layout_constraintBottom_toTopOf="@+id/edInputPhoneReg"
                app:layout_constraintStart_toStartOf="@+id/edInputPhoneReg" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="5dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/red"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toTopOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.45999998" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Минимум 8 символов"
                android:textColor="@color/grey"
                app:layout_constraintStart_toStartOf="@+id/edInputPassReg"
                app:layout_constraintTop_toBottomOf="@+id/edInputPassReg" />

            <CheckBox
                android:id="@+id/checkBoxPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:checked="false"
                app:layout_constraintStart_toStartOf="@+id/edInputConfPassReg"
                app:layout_constraintTop_toBottomOf="@+id/edInputConfPassReg" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="@string/chech_box_2_perssonal_data"
                android:textColor="@color/green"
                android:textColorLink="@color/green"
                app:layout_constraintBottom_toBottomOf="@+id/checkBoxPersonal"
                app:layout_constraintEnd_toEndOf="@+id/textView11"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/chech_box_1_perssonal_data"
                app:layout_constraintStart_toEndOf="@+id/checkBoxPersonal"
                app:layout_constraintTop_toTopOf="@+id/checkBoxPersonal" />

            <Button
                android:id="@+id/btRegis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                android:backgroundTint="@color/green"
                android:text="@string/bt_reg"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="@+id/edInputConfPassReg"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/edInputConfPassReg"
                app:layout_constraintTop_toBottomOf="@+id/edInputConfPassReg" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="393dp"
                android:layout_height="251dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:layout_marginTop="40dp"
                android:layout_marginEnd="46dp"

                android:src="@drawable/auth_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/progressBarBack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/progressBarBackColor"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationZ="10dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </eightbitlab.com.blurview.BlurView>

</FrameLayout>